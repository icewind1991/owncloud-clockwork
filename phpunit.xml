<?xml version="1.0" encoding="utf-8" ?>
<phpunit bootstrap="tests/bootstrap.php">
	<filter>
		<whitelist>
			<directory suffix=".php">../clockwork</directory>
			<exclude>
				<directory suffix=".php">../clockwork/l10n</directory>
				<directory suffix=".php">../clockwork/tests</directory>
			</exclude>
		</whitelist>
	</filter>
	<logging>
		<!-- and this is where your report will be written -->
		<log type="coverage-clover" target="./clover.xml"/>
	</logging>
	<testsuite name='unit'>
		<directory suffix='.php'>tests/unit</directory>
	</testsuite>
</phpunit>
